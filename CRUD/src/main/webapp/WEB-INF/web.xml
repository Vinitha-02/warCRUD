<web-app>
  <display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>CreateEmployee</servlet-name>
		<servlet-class>war.CreateEmployee</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateEmployee</servlet-name>
		<url-pattern>/CreateEmployee</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteEmployee</servlet-name>
		<servlet-class>war.DeleteEmployee</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteEmployee</servlet-name>
		<url-pattern>/DeleteEmployee</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ListEmployee</servlet-name>
		<servlet-class>war.ListEmployee</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListEmployee</servlet-name>
		<url-pattern>/ListEmployee</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/kmbtask</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>

